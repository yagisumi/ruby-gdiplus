<% if method_listing.size > 0 %>
  <% groups(method_listing) do |list, name, scope| %>
    <div id="<%= scope %>_method_summary " class="method_summary">
      <h2>
        <%= name %>
        <small><a href="#" class="summary_toggle">collapse</a></small>
      </h2>

      <ul class="summary">
        <% list.each do |meth| %>
          <%= yieldall :item => meth %>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>